# Application Configuration
PORT=3000

# Database Configuration
DB_URL=postgresql://username:password@localhost:5432/veritix_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Stellar Configuration
STELLAR_KEYS=your-stellar-keys-here

# QR Code Configuration
# How long a QR code remains valid (in seconds)
QR_EXPIRY_SECONDS=30
# Secret used to sign QR payloads (defaults to JWT_SECRET if not set)
QR_SECRET=your-qr-secret-key

# Logging Configuration
# Log level for application logs: error | warn | info | debug | verbose
LOG_LEVEL=info
# Enable streaming logs to external provider
LOG_EXTERNAL_ENABLED=false
# External provider type (e.g., loki | datadog | generic)
LOG_EXTERNAL_PROVIDER=generic
# External logging endpoint URL
LOG_EXTERNAL_URL=
# External logging API token (if required)
LOG_EXTERNAL_TOKEN=